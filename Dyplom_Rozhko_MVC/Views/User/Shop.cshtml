@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    Layout = "~/Views/Shared/_LayoutPageOther.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 250px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">@ViewBag.CategoryName</h1>
    </div>
</div>
<!-- Page Header End -->
<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <!-- Color Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Фільтрація за кольорами</h5>
                <form method="get" action="@Url.Action("Shop", "User")">
                    <input type="hidden" name="id" value="@Request.QueryString["id"]" />
                    <input type="hidden" name="categoryName" value="@ViewBag.CategoryName" />

                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="color-red" name="colors" value="Червоний" />
                        <label class="custom-control-label" for="color-red">Червоний</label>
                    </div>
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="color-white" name="colors" value="Білий" />
                        <label class="custom-control-label" for="color-white">Білий</label>
                    </div>
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="color-purple" name="colors" value="Фіолетовий" />
                        <label class="custom-control-label" for="color-purple">Фіолетовий</label>
                    </div>
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="color-blue" name="colors" value="Блакитний" />
                        <label class="custom-control-label" for="color-blue">Блакитний</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Фільтрувати</button>
                </form>
            </div>
            <!-- Color End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">


                @foreach (var item in Model.Product)
                {
                    if (item.IsActive.Equals(true))
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                            <div class="card product-item border-0 mb-4">
                                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                    <a href="@Url.Action("Product", new { id = item.ProductId })"><img class="img-fluid w-100" src="@Url.Content(item.ImageUrl)" alt=""></a>
                                </div>
                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                    <h6 class="text-truncate mb-3">@Html.DisplayFor(modelItem => item.ProductName)</h6>
                                    <div class="d-flex justify-content-center">
                                        <h6>@Html.DisplayFor(modelItem => item.Price)₴</h6>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between bg-light border">
                                </div>
                            </div>
                        </div>
                    }
                }


            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->