@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    Layout = "~/Views/Shared/_LayoutPageOther.cshtml";
    var selectedProduct = Model.Product.FirstOrDefault();
}

<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-item active">
                    <img class="w-100 h-100" src="@Url.Content(selectedProduct.ImageUrl)" alt="Image" style="border: 2px solid #ecf4fc;">
                </div>
            </div>
        </div>

        <div class="col-lg-7 pb-5">
            <h3 class="font-weight-semi-bold">@selectedProduct.ProductName</h3>
            <h3 style="margin-bottom: 20px; margin-top: 30px;" class="font-weight-semi-bold mb-4">@selectedProduct.Price₴</h3>
            <p class="mb-4">@selectedProduct.ShortDescription</p>
            <div class="d-flex align-items-center mb-4 pt-2">
                <a class="text-dark" href="@Url.Action("AddToCart", new { productId = ViewBag.Id, toWishlist = false })">
                    <button class="btn btn-primary px-3">
                        Додати в кошик
                    </button>
                </a>
                <a class="text-dark" href="@Url.Action("AddToWishlist", new { productId = ViewBag.Id })">
                    <button style="margin-left:10px;" class="btn btn-primary px-3">
                        Додати в бажане
                    </button>
                </a>
            </div>
            <div style="margin-top: 30px;" class="tab-pane fade show active">
                <h5 class="mb-3">Характеристики товару</h5>
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-bordered" style="border-radius: 8px; overflow: hidden;">
                            <tbody>
                                <tr>
                                    <td style="font-weight: bold; background-color: #f8f9fa; width: 100px ">Розмір</td>
                                    <td>@selectedProduct.Size</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; background-color: #f8f9fa;">Колір</td>
                                    <td>@selectedProduct.Color</td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold; background-color: #f8f9fa;">Виробник</td>
                                    <td>@selectedProduct.CompanyName</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Shop Detail End -->