@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    Layout = "~/Views/Shared/_LayoutPageOther.cshtml";
}

<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        @*<div class="col-lg-8 table-responsive mb-5">*@
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Товари</th>
                        <th>Ціна</th>
                        <th>Купити</th>
                        <th>Прибрати</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model.Cart)
                    {
                        <tr>
                            <td class="align-middle"><img src="../User/img/product-1.jpg" alt="" style="width: 50px;">@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                            <td class="align-middle">@item.Product.Price₴</td>
                            <td class="align-middle"><button class="btn btn-primary px-3">Додати в кошик</button></td>
                            <td class="align-middle"><button class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></td>
                        </tr>
                    }

                </tbody>
            </table>
        @*</div>*@
    </div>
</div>
<!-- Cart End -->
