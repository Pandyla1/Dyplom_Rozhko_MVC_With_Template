@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    Layout = "~/Views/Shared/_LayoutPageLoginRegister.cshtml";
}

<!-- Checkout Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h4 class="font-weight-semi-bold mb-4">Підтвердження замовлення</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Пошта</label>
                        <input class="form-control" type="text" value="@User.Identity.Name">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Номер телефону</label>
                        <input class="form-control" type="text" placeholder="">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Місто</label>
                        <input class="form-control" type="text" placeholder="">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Доставка</label>
                        <select class="custom-select">
                            <option selected>Нова пошта</option>
                            <option>Укрпошта</option>
                            <option>Meest</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Номер відділення</label>
                        <input class="form-control" type="text" placeholder="">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Оплата</label>
                        <select class="custom-select">
                            <option selected>При отримані</option>
                            <option>GooglePay/ApplePay</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Товари</h4>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Cart)
                    {
                        <div class="d-flex justify-content-between">
                            <p>@item.Product.ProductName</p>
                            <p>@item.Product.Price₴</p>
                        </div>
                    }
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Повна сума замовлення</h5>
                        <h5 class="font-weight-bold">
                            @*
                                Додати обрахунок суми всіх товарів    
                            *@
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card border-secondary mb-5">
                <div class="card-footer border-secondary bg-transparent">
                    <a href="@Url.Action("OrderDataSave")">
                        <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Замовити</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->
