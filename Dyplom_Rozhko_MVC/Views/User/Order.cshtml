@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutPageOther.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div style="display: grid; place-items: left; height: auto; ">
            <div style="width: 900px; margin-left: 100px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <p style="margin-left: 15px">Місто</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Orders.First().City, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Orders.First().City, "", new { @class = "text-danger" })
                    </div>
                </div>

                <p style="margin-left: 15px">Метод доставки</p>
                <div class="col-md-10" style="margin-bottom: 15px;">
                    @Html.DropDownListFor(
                        model => model.Orders.First().DeliveryMethod,
                        new SelectList(new[]
                        {
                            new { Value = "Нова Пошта", Text = "Нова Пошта" },
                            new { Value = "Укрпошта", Text = "Укрпошта" },
                            new { Value = "Meest", Text = "Meest" }
                        }, "Value", "Text"),
                        new { @class = "form-control" }
                    )
                    @Html.ValidationMessageFor(model => model.Orders.First().DeliveryMethod, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <p style="margin-left: 15px">Номер відділення</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Orders.First().DepartmentNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Orders.First().DepartmentNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p style="margin-left: 15px">Пошта</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Orders.First().Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Orders.First().Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p style="margin-left: 15px">Телефон</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Orders.First().Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Orders.First().Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <p style="margin-left: 15px">Метод оплати</p>
                <div class="col-md-10" style="margin-bottom: 15px;">
                    @Html.DropDownListFor(
                        model => model.Orders.First().PaymentMethod,
                        new SelectList(new[]
                        {
                            new { Value = "При отриманні", Text = "При отриманні" },
                            new { Value = "Google/Apple Pay", Text = "Google/Apple Pay" }
                        }, "Value", "Text"),
                        new { @class = "form-control" }
                    )
                    @Html.ValidationMessageFor(model => model.Orders.First().PaymentMethod, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Замовити" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
