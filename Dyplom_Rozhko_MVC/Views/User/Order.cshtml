@model Dyplom_Rozhko_MVC.Models.ConnectAllTables

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutPageLoginRegister.cshtml";
}

<div style="display: grid; place-items: left; height: auto; ">
    <div style="width: 900px; margin-left: 115px; margin-bottom: 20px; margin-top: 10px;">
