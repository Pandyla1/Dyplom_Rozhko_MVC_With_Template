@model Dyplom_Rozhko_MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPageLoginRegister.cshtml";
}

<main aria-labelledby="title">
    <div style="display: grid; place-items: left; height: auto; ">
        <div style="width: 900px; margin-left: 100px;">
            <h2 id="title">Створення акаунту</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <h5 class="col-md-2 col-form-label">Пошта</h5>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <section style="padding-top: 10px"></section>
                <div class="row">
                    <h5 class="col-md-2 col-form-label">Пароль</h5>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <section style="padding-top: 10px"></section>
                <div class="row">
                    <h5 class="col-md-2 col-form-label">Підтвердження паролю</h5>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="Створити" class="btn btn-outline-dark" />
                    </div>
                </div>
            }
            <p>
                @Html.ActionLink("Ввійти", "Login")
            </p>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
