@model IEnumerable<Dyplom_Rozhko_MVC.Contact>

@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Повідомлення</h2>
<div style="overflow-y:auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComtactId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="max-width: 400px;">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th style="max-width: 400px;">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComtactId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="max-width: 400px; word-wrap: break-word; white-space: normal;">
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td style="max-width: 400px; word-wrap: break-word; white-space: normal;">
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Видалити", "ContactDelete", new { id=item.ComtactId })
            </td>
        </tr>
    }

    </table>
</div>